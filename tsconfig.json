{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "public": [
        "./public/"
      ],
      "src": [
        "./src/"
      ]
    }
  },
  "include": [
    "scripts",
    "src",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
