{
  "name": "react-esbuild-seed",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "node": "node --no-warnings --loader ts-node/esm",
    "start": "node dist/server.js",
    "dev": "npm run node -- ./scripts/watch",
    "build": "npm run node -- ./scripts/build"
  },
  "author": "Will Medina <williams.medinaa@gmail.com>",
  "devDependencies": {
    "@types/node": "^20.2.1",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-config-react-app": "^7.0.1",
    "parse5": "^7.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.23",
    "postcss-import": "^15.1.0",
    "postcss-modules": "^6.0.0",
    "postcss-nesting": "^11.2.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "max-len": [
        "warn",
        {
          "code": 80,
          "tabWidth": 2,
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreRegExpLiterals": true,
          "ignorePattern": true
        }
      ],
      "no-redeclare": "off",
      "quotes": [
        "error",
        "single"
      ]
    }
  }
}