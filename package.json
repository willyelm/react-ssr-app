{
  "name": "react-esbuild-seed",
  "version": "0.0.1",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "lint": "npx eslint src/",
    "build": "node scripts/build.mjs",
    "dev": "node scripts/dev.mjs",
    "start": "node dist/server.js"
  },
  "author": "Will Medina <williams.medinaa@gmail.com>",
  "devDependencies": {
    "@types/node": "^20.11.7",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "eslint-config-react-app": "^7.0.1",
    "parse5": "^7.1.2",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "max-len": [
        "warn",
        {
          "code": 80,
          "tabWidth": 2,
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreRegExpLiterals": true,
          "ignorePattern": true
        }
      ],
      "no-redeclare": "off",
      "quotes": [
        "error",
        "single"
      ]
    }
  }
}